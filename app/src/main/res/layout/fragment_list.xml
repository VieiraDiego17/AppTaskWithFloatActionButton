<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.list.ListFragment">


    <TextView
        android:id="@+id/tasksRestred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Manutenções Cadastradas"
        android:textSize="32sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonListToRegister"
        app:layout_constraintTop_toBottomOf="@+id/tasksRestred" />

    <Button
        android:id="@+id/buttonListToRegister"
        style="@style/botao_azul"
        android:layout_width="169dp"
        android:layout_height="58dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/cantos"
        android:text="CADASTRAR MANUTENÇÃO"
        app:layout_constraintBottom_toTopOf="@+id/buttonListToMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonListToMenu"
        style="@style/botao_azul"
        android:layout_width="169dp"
        android:layout_height="58dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/cantos"
        android:text="IR PARA TELA INICIAL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonListToRegister"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonListToRegister" />


</androidx.constraintlayout.widget.ConstraintLayout>